<% if (typeof successMess !== 'undefined') { %>
    <p><%- successMess %></p>
<% } else { %>
    <form action="/users/reg" method="post">
        <label for="login">Логин</label><br>
        <% if (typeof errMess !== 'undefined') { %>
            <span style="color: red;"><%= errMess %></span><br>
        <% } %>
        <input type="text" name="login"
         <%= (typeof login !== 'undefined') ? `value=${login}` : '' %>
        >
        <br><br>
        <label for="password">Пароль</label><br>
        <input type="password" name="password"
        <%= (typeof password !== 'undefined') ? `value=${password}` : '' %>
        ><br><br>
        <input type="submit" value="Зарегистрироваться">
    </form>
<% } %>
